                    <Font name="FreeSerif Bold" size="35.0" />
                </font>
                <VBox.margin>
                    <Insets left="10.0" top="-30.0" />
                </VBox.margin>
            </Label>
        </children>
        <VBox.margin>
            <Insets top="30.0" />
        </VBox.margin>
    </VBox>
    <HBox prefHeight="37.0" prefWidth="436.0">
        <children>

            <Label fx:id="usernameTextLabel" alignment="TOP_CENTER" contentDisplay="CENTER" prefHeight="28.0" prefWidth="117.0" style="-fx-background-color: #D5DBDB; -fx-background-radius: 10px;" text="Username" textAlignment="CENTER">
