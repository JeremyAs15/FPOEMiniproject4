    <VBox alignment="CENTER" prefHeight="152.0" prefWidth="572.0">
        <children>
            <Label fx:id="labelTitle" alignment="CENTER" prefHeight="81.0" prefWidth="529.0" text="WELCOME TO NAVAL BATTLE" textAlignment="CENTER">
